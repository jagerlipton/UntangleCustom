<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DotsLines" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_stroke</item>
        <item name="colorPrimaryVariant">@color/game_bg</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_stroke</item>
        <item name="colorSecondaryVariant">@color/game_bg</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:navigationBarColor">@color/game_bg</item>
    </style>

    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="android:textColorHint">@color/button_stroke</item>
        <item name="hintTextColor">@color/button_stroke</item>
    </style>

    <style name="SliderTooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/game_bg</item>
        <item name="android:textAppearance">@style/SliderTooltip.TextAppearance</item>
    </style>

    <style name="SliderTooltip.TextAppearance" parent="@style/TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/button_stroke</item>
    </style>

    <style name="Slider" parent="Widget.MaterialComponents.Slider">
        <item name="trackColorActive">@color/slider_trackColorActive</item>
        <item name="trackColorInactive">@color/slider_trackColorInactive</item>
    </style>


</resources>